<h1> Edit: <%= @task.title %></h1>

<%= form_for @task, remote: true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br />
    <%= f.label :description %>
    <%= f.text_area :description %> <br />
    <%= f.label :finished %>
    <%= f.check_box :finished %> <br />
    <%= f.submit %>
<% end %>